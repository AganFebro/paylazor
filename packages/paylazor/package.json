{
  "name": "paylazor",
  "version": "0.0.0",
  "private": true,
  "description": "Paylazor checkout widget (LazorKit-integrated)",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch --onSuccess \"pnpm -s typecheck\"",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@lazorkit/wallet": "^2.0.0",
    "@solana-program/token": "^0.9.0",
    "@solana/kit": "^5.0.0",
    "@solana/kora": "^0.1.0",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-standard-features": "^1.3.0",
    "@solana/web3.js": "^1.98.2",
    "@wallet-standard/base": "^1.1.0",
    "@wallet-standard/features": "^1.1.0",
    "@wallet-standard/wallet": "^1.1.0",
    "react": "^18.3.1 || ^19.0.0",
    "react-dom": "^18.3.1 || ^19.0.0",
    "zustand": "^5.0.5"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "@solana/spl-token": "^0.4.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/node": "^24.0.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "tsup": "^8.0.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1"
  }
}
